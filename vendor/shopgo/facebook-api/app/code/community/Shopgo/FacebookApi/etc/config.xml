<?xml version="1.0"?>
<config>
    <modules>
        <Shopgo_FacebookApi>
            <version>1.0.1</version>
        </Shopgo_FacebookApi>
    </modules>
    <frontend>
        <routers>
            <facebookapi>
                <use>standard</use>
                <args>
                    <module>Shopgo_FacebookApi</module>
                    <frontName>facebookapi</frontName>
                </args>
            </facebookapi>
        </routers>
        <layout>
            <updates>
                <facebookapi>
                    <file>facebookapi.xml</file>
                </facebookapi>
            </updates>
        </layout>
        <events>
            <sales_order_place_after>
                <observers>
                    <shopgo_facebookapi_observer>
                        <type>singleton</type>
                        <class>Shopgo_FacebookApi_Model_Observer</class>
                        <method>placeOrder</method>
                    </shopgo_facebookapi_observer>
                </observers>
            </sales_order_place_after>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <facebookapi after="Mage_Adminhtml">Shopgo_FacebookApi_Adminhtml</facebookapi>
                    </modules>   
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <facebookapi>
                    <file>facebookapi.xml</file>
                </facebookapi>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <facebookapi>
                <class>Shopgo_FacebookApi_Model</class>
                <resourceModel>facebookapi_mysql4</resourceModel>
            </facebookapi>
            <facebookapi_mysql4>
                <class>Shopgo_FacebookApi_Model_Mysql4</class>
                <entities>
                    <facebookapi>
                        <table>facebookapi</table>
                    </facebookapi>
                </entities>
            </facebookapi_mysql4>
        </models>
        <blocks>
            <facebookapi>
                <class>Shopgo_FacebookApi_Block</class>
            </facebookapi>
        </blocks>
        <helpers>
            <facebookapi>
                <class>Shopgo_FacebookApi_Helper</class>
            </facebookapi>
        </helpers>
        <resources>
            <facebookapi_setup>
                <setup>
                    <module>Shopgo_FacebookApi</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </facebookapi_setup>
            <facebookapi_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </facebookapi_write>
            <facebookapi_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </facebookapi_read>
        </resources>
    </global>
    <default>
        <facebookapi>
            <settings></settings>
        </facebookapi>
    </default>
</config>
