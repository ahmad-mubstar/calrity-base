<?xml version="1.0"?>
<config>
	<modules>
		<Shopgo_ARP>
			<version>1.0.0</version>
		</Shopgo_ARP>
	</modules>
	<global>
		<blocks>
			<arp>
				<class>Shopgo_ARP_Block</class>
			</arp>
			<catalog>
				<rewrite>
					<product_list_related>Shopgo_ARP_Block_Related</product_list_related>
				</rewrite>
			</catalog>
			<adminhtml>
				<rewrite>
					<catalog_product_edit_tab_related>Shopgo_ARP_Block_Adminhtml_Catalog_Product_Edit_Tab_Related</catalog_product_edit_tab_related>
				</rewrite>
			</adminhtml>
		</blocks>
		<models>
			<arp>
				<class>Shopgo_ARP_Model</class>
			</arp>
		</models>
		<helpers>
			<arp>
				<class>Shopgo_ARP_Helper</class>
			</arp>
		</helpers>
	</global>
	<adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<arp translate="title" module="arp">
											<title>Shopgo Auto Related Products</title>
										</arp>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<default>
		<arp>
			<general>
				<enabled>1</enabled>
				<backend_enabled>1</backend_enabled>
				<limit>3</limit>
				<cache_lifetime>3600</cache_lifetime>
			</general>
		</arp>
	</default>
</config>
