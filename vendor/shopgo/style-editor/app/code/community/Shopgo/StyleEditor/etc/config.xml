<?xml version="1.0"?>
<config>
    <modules>
        <Shopgo_StyleEditor>
            <version>1.0.6</version>
        </Shopgo_StyleEditor>
    </modules>
    <global>
        <models>
            <styleeditor>
                <class>Shopgo_StyleEditor_Model</class>
            </styleeditor>
        </models>
        <blocks>
            <styleeditor>
                <class>Shopgo_StyleEditor_Block</class>
            </styleeditor>
        </blocks>
        <helpers>
            <styleeditor>
                <class>Shopgo_StyleEditor_Helper</class>
            </styleeditor>
        </helpers>
        <resources>
            <styleeditor_setup>
                <setup>
                    <module>Shopgo_StyleEditor</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </styleeditor_setup>
            <styleeditor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </styleeditor_write>
            <styleeditor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </styleeditor_read>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <styleeditor before="Mage_Adminhtml">Shopgo_StyleEditor_Adminhtml</styleeditor>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <styleeditor>
                    <file>shopgo/styleeditor.xml</file>
                </styleeditor>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <styleeditor>
            <logo>
                <position>middle</position>
            </logo>
            <slider>
                <position>full</position>
                <block>shop_now_1</block>
            </slider>
            <brands>
                <position>bottom</position>
            </brands>
            <flippers>
                <count>4</count>
                <speed>3000</speed>
            </flippers>
        </styleeditor>
    </default>
</config>
