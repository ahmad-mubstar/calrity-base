    <catalog_product_view>
        <reference name="product.info.extrahint">
                <block type="shopgo_social/social_share_buttons" name="shopgo_social" as="shopgo_social"  template="shopgo/social/share_btns.phtml"  after="-" />
        </reference>
        <reference name="content">
            <block type="shopgo_social/social" name="tet" as="tet" template="shopgo/social/facebook/comment.phtml" after="-"/>
        </reference>
    </catalog_product_view>
    
    <customer_logged_out>
        <reference name="top.links">
            <action method="addLink" name="googleLogin" as="googleLogin" translate="label title" ifconfig="social/google/enabled">
                <label>Sign in with <![CDATA[<i class="icon icon-googleplus"></i>]]></label>
                <url helper="shopgo_social/createGoogleButtonLink"></url>
                <title>Sign in with Google</title>
                <prepare/>
                <urlParams helper="core/url/getHomeUrl"/>
                <position>999</position>
                <liParams>id="googleLogin" onclick=""</liParams>
            </action>
            <action method="addLink" name="facebookLogin" as="facebookLogin" translate="label title" ifconfig="social/facebook/enabled">
                <label>Sign in with <![CDATA[<i class="icon icon-facebook"></i>]]></label>
                <url helper="shopgo_social/createFacebookButtonLink"></url>
                <title>Sign in with Facebook</title>
                <prepare/>
                <urlParams helper="core/url/getHomeUrl"/>
                <position>999</position>
                <liParams>id="facebookLogin" onclick=""</liParams>
            </action>
            <action method="addLink" name="twitterLogin" as="twitterLogin" translate="label title" ifconfig="social/twitter/enabled">
                <label>Sign in with <![CDATA[<i class="icon icon-twitter"></i>]]></label>
                <url helper="shopgo_social/createTwitterButtonLink"></url>
                <title>Sign in with Twitter</title>
                <prepare/>
                <urlParams helper="core/url/getHomeUrl"/>
                <position>999</position>
                <liParams>id="twitterLogin" onclick=""</liParams>
            </action>
            <action method="addLink" name="linkedinLogin" as="linkedinLogin" translate="label title" ifconfig="social/linkedin/enabled">
                <label>Sign in with <![CDATA[<i class="icon icon-linkedin"></i>]]></label>
                <url helper="shopgo_social/createLinkedinButtonLink"></url>
                <title>Sign in with Linkedin</title>
                <prepare/>
                <urlParams helper="core/url/getHomeUrl"/>
                <position>999</position>
                <liParams>id="linkedinLogin" onclick=""</liParams>
            </action>
        </reference>
    </customer_logged_out>

