<?xml version="1.0"?>
<config>
    <modules>
        <Shopgo_Social>
            <version>1.0.0</version>
        </Shopgo_Social>
    </modules>
    <frontend>
        <routers>
            <shopgo_social>
                <use>standard</use>
                <args>
                    <module>Shopgo_Social</module>
                    <frontName>social</frontName>
                </args>
            </shopgo_social>
        </routers>
        <layout>
            <updates>
                <shopgo_social>
                    <file>shopgo/social.xml</file>
                </shopgo_social>
            </updates>
        </layout>
        <translate>
            <modules>
                <Shopgo_Social>
                     <files>
                        <default>Shopgo_Social.csv</default>
                     </files>
                </Shopgo_Social>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <shopgo_social after="Mage_Adminhtml">Shopgo_Social_Adminhtml</shopgo_social>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<shopgo_social>
					<file>shopgo/social.xml</file>
				</shopgo_social>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <shopgo_social>
                <class>Shopgo_Social_Model</class>
            </shopgo_social>
        </models>
        <blocks>
            <shopgo_social>
                <class>Shopgo_Social_Block</class>
            </shopgo_social>
        </blocks>
        <helpers>
            <shopgo_social>
                <class>Shopgo_Social_Helper</class>
            </shopgo_social>
        </helpers>
        <resources>
            <shopgo_social_setup>
                <setup>
                    <module>Shopgo_Social</module>
                    <class>Shopgo_Social_Model_Resource_Setup</class>
                </setup>
            </shopgo_social_setup>
        </resources>
    </global>
	<default>
		<social>
			<share_btns>
                <enabled>0</enabled>
                <iconsize>Medium</iconsize>
                <iconshape>square</iconshape>
                <iconscolor>FFFFFF</iconscolor>
				<background>525252</background>
			</share_btns>
            <google>
                <enabled>0</enabled>
            </google>
            <facebook>
                <enabled>0</enabled>
                <show_comments>0</show_comments>
                <enable_og_tags>1</enable_og_tags>
                <share_orders>0</share_orders>
            </facebook>
            <twitter>
                <enabled>0</enabled>
            </twitter>
            <linkedin>
                <enabled>0</enabled>
            </linkedin>
		</social>
	</default>
</config>