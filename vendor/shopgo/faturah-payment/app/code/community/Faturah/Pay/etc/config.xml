<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Faturah_Pay>
            <version>0.0.1</version>
        </Faturah_Pay>
    </modules>
    <global>
        <blocks>
            <faturah>
                <class>Faturah_Pay_Block</class>
            </faturah>
        </blocks>
        <helpers>
            <faturah>
                <class>Faturah_Pay_Helper</class>
            </faturah>
        </helpers>
        <models>
            <faturah>
                <class>Faturah_Pay_Model</class>
            </faturah>
            <faturah_adminhtml>
                <class>Faturah_Pay_Adminhtml_Model</class>
            </faturah_adminhtml>
            <sales>
                <rewrite>
                    <service_quote>Faturah_Pay_Model_Service_Quote</service_quote>
                </rewrite>
            </sales>
        </models>
        <resources>
            <faturah_setup>
                <setup>
                    <module>Faturah_Pay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faturah_setup>
            <faturah_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faturah_write>
            <faturah_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faturah_read>
        </resources>
    </global>
    <default>
        <payment>
            <faturah>
                <active>1</active>
                <order_status>pending</order_status>
                <model>faturah/pay</model>
                <title>PayFaturah Payment Method</title>
                <payment_action>sale</payment_action>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
            </faturah>
        </payment>
    </default>
    <frontend>
        <secure_url>
            <pay>/faturah</pay>
        </secure_url>
        <routers>
            <faturah>
                <use>standard</use>
                <args>
                    <module>Faturah_Pay</module>
                    <frontName>faturah</frontName>
                </args>
            </faturah>
        </routers>
        <layout>
            <updates>
                <faturah>
                    <file>faturah/faturah.xml</file>
                </faturah>
            </updates>
        </layout>
    </frontend>
</config>
