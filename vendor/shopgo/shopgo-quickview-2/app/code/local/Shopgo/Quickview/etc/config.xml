<?xml version="1.0"?>
<config>
	<global>
		<models>
            <quickview>
                <class>Shopgo_Quickview_Model</class>
            </quickview>
        </models>
		<blocks>
            <quickview>
                <class>Shopgo_Quickview_Block</class>
            </quickview>
        </blocks>
		<helpers>
            <quickview>
                <class>Shopgo_Quickview_Helper</class>
            </quickview>
        </helpers>
        <resources>
        	<quickview_setup>
        		<setup>
        			<module>Shopgo_Quickview</module>
        		</setup>
        	</quickview_setup>
        </resources>
	</global>
	<frontend>
        <routers>
			<quickview>
                <use>standard</use>
                <args>
                    <module>Shopgo_Quickview</module>
                    <frontName>quickview</frontName>
                </args>
            </quickview>
        </routers>
		<layout>
            <updates>
                <quickview module="Shopgo_Quickview">
					<file>shopgo/quickview.xml</file>
                </quickview>
            </updates>
        </layout>
        <translate>
      		<modules>
          		<Shopgo_Quickview>
                     <files>
                          <default>Shopgo_Quickview.csv</default>
                     </files>
                </Shopgo_Quickview>
            </modules>
        </translate>
	</frontend>
	<adminhtml>
        <translate>
      		<modules>
          		<Shopgo_Quickview>
                     <files>
                          <default>Shopgo_Quickview.csv</default>
                     </files>
                </Shopgo_Quickview>
            </modules>
        </translate>
		<menu>
			<shopgo>
				<title>ShopGo</title>
				<sort_order>87</sort_order>
				<children>
					<quickview>
						<title>ShopGo Quickview</title>
						<sort_order>87</sort_order>
						<action>adminhtml/system_config/edit/section/quickview/</action>
					</quickview>
				</children>
			</shopgo>
		</menu>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<quickview translate="title" module="quickview">
											<title>ShopGo Quickview Settings</title>
										</quickview>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<default>
        <quickview>
			 <general>
			     <enable><![CDATA[1]]></enable>
			     <image_position><![CDATA[4]]></image_position>
			     <popup_height><![CDATA[340px]]></popup_height>
			     <popup_width><![CDATA[700px]]></popup_width>
			     <selector_qv><![CDATA[.products-list .item div.quickview-wrap, .products-grid .item div.quickview-wrap]]></selector_qv>
			</general>
        </quickview>
    </default>
</config>