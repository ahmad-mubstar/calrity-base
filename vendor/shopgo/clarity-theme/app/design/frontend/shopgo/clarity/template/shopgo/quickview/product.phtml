        {
           var currentVal = parseInt(jQuery(this).parent().find(".qty").val());
           if (currentVal == "NaN") currentVal = 0;
           if (currentVal > 1)
           {
               jQuery(this).parent().find(".qty").val(currentVal - 1);
           }
        });
