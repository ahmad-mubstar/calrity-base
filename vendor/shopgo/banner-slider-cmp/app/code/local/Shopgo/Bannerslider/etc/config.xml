<?xml version="1.0"?>
<config>
    <modules>
        <Shopgo_Bannerslider>
            <version>1.0.0</version>
        </Shopgo_Bannerslider>
    </modules>
    <frontend>
        <routers>
            <bannerslider>
                <use>standard</use>
                <args>
                    <module>Shopgo_Bannerslider</module>
                    <frontName>bannerslider</frontName>
                </args>
            </bannerslider>
        </routers>
        <layout>
            <updates>
                <bannerslider>
                    <file>shopgo/bannerslider.xml</file>
                </bannerslider>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <bannerslider after="Mage_Adminhtml">Shopgo_Bannerslider_Adminhtml</bannerslider>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <bannerslider>
                    <file>shopgo/bannerslider.xml</file>
                </bannerslider>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <bannerslider>
                <class>Shopgo_Bannerslider_Model</class>
                <resourceModel>bannerslider_mysql4</resourceModel>
            </bannerslider>
            <bannerslider_mysql4>
                <class>Shopgo_Bannerslider_Model_Mysql4</class>
                <entities>
                    <bannerslider>
                        <table>shopgo_bannerslider</table>
                    </bannerslider>
                </entities>
            </bannerslider_mysql4>
        </models>
        <resources>
            <bannerslider_setup>
                <setup>
                    <module>Shopgo_Bannerslider</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bannerslider_setup>
            <bannerslider_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bannerslider_write>
            <bannerslider_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bannerslider_read>
        </resources>
        <blocks>
            <bannerslider>
                <class>Shopgo_Bannerslider_Block</class>
            </bannerslider>
        </blocks>
        <helpers>
            <bannerslider>
                <class>Shopgo_Bannerslider_Helper</class>
            </bannerslider>
        </helpers>
    </global>
    <default>
        <bannerslider>
            <general>
                <theme_settings>1</theme_settings>
            </general>
            <slider>
                <position>top</position>
                <type>basic</type>
                <animation>slide</animation>
                <easing>swing</easing>
                <timeout>7000</timeout>
                <speed>600</speed>
                <loop>1</loop>
            </slider>
        </bannerslider>
    </default>
</config>
