<?xml version="1.0"?>
<config>
    <modules>
        <Shopgo_ProBadge>
            <version>1.0.1</version>
        </Shopgo_ProBadge>
    </modules>
    <frontend>
        <routers>
            <probadge>
                <use>standard</use>
                <args>
                    <module>Shopgo_ProBadge</module>
                    <frontName>probadge</frontName>
                </args>
            </probadge>
        </routers>
        <layout>
            <updates>
                <probadge>
                    <file>probadge.xml</file>
                </probadge>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <probadge after="Mage_Adminhtml">Shopgo_ProBadge_Adminhtml</probadge>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<probadge>
					<file>probadge.xml</file>
				</probadge>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <probadge>
                <class>Shopgo_ProBadge_Model</class>
                <resourceModel>probadge_mysql4</resourceModel>
            </probadge>
            <probadge_mysql4>
                <class>Shopgo_ProBadge_Model_Mysql4</class>
                <entities>
                    <probadge>
                        <table>probadge</table>
                    </probadge>
                </entities>
            </probadge_mysql4>
        </models>
        <resources>
            <probadge_setup>
                <setup>
                    <module>Shopgo_ProBadge</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </probadge_setup>
            <probadge_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </probadge_write>
            <probadge_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </probadge_read>
        </resources>
        <blocks>
            <probadge>
                <class>Shopgo_ProBadge_Block</class>
            </probadge>
            <catalog>
                <rewrite>
                    <product_list>Shopgo_ProBadge_Block_Product_List</product_list>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <probadge>
                <class>Shopgo_ProBadge_Helper</class>
            </probadge>
        </helpers>
    </global>
		<default>
			<probadge>
				<settings>
				</settings>
			</probadge>
		</default>
</config>